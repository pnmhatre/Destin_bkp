<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="200dp"
android:layout_height="270dp"
android:padding="8dp"
android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashboard_card_background"
        android:padding="20dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/tvId"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_edit"
            android:tint="#ffffff"
            android:rotation="0"
            android:clickable="true"
            android:background="@drawable/ripple_white"/>

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_car"
            android:padding="10dp"
            android:background="@drawable/white_circle"/>
        <TextView
            android:id="@+id/tv_name"
            android:textStyle="bold"
            android:layout_below="@+id/img_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum Text"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/tv_address"
            android:textStyle="bold"
            android:layout_below="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum Text, City Name, State Name, Country"
            android:textColor="@color/white"
            android:textSize="11.5sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp"/>
        <LinearLayout
            android:layout_below="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_audio_profile"
                android:tint="#40ffffff"
                android:layout_marginRight="5dp"
                android:padding="2dp"/>
            <ImageView
                android:id="@+id/img_2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_sms"
                android:tint="@color/colorAccent" />
            <ImageView
                android:id="@+id/img_3"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_notification"
                android:tint="#40ffffff"
                android:padding="2dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>
<ImageView
    android:id="@+id/img_status"
    android:layout_width="18dp"
    android:layout_height="18dp"
    android:layout_alignParentLeft="true"
    android:src="@mipmap/ic_active"
    android:tint="@android:color/holo_green_light"
    android:layout_above="@+id/dashboard_tv_date"
    android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/dashboard_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="24 Dec 2016"
            android:textSize="11sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>

    <ImageView
    android:id="@+id/img_hits"
    android:layout_width="18dp"
    android:layout_height="18dp"
    android:layout_alignParentRight="true"
    android:src="@mipmap/ic_hits"
    android:tint="#fff"
    android:layout_above="@+id/dashboard_tv_date"
    android:layout_marginBottom="3dp" />

        <TextView
            android:id="@+id/dashboard_tv_hits"
            android:layout_width="wrap_content"
            android:minWidth="20dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="2"
            android:textSize="11sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</RelativeLayout>